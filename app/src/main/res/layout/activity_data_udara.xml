<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/dataudara"
    tools:context=".DataUdara">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:radius="8dp"
        app:cardCornerRadius="25dp">
        <ImageView
            android:id="@+id/imageDataUdara"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="@string/gambarhewan"
            android:src="@drawable/udara"
            android:scaleType="fitCenter" />
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/btn_udara"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="-1dp"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="10dp"
        android:src="@drawable/volume"
        android:textSize="10sp" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:radius="8dp"
        app:cardCornerRadius="25dp">

        <TextView
            android:id="@+id/textViewIndo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:text="....."
            android:textSize="22sp"
            android:textStyle="bold" />

         <TextView
             android:id="@+id/textViewArab"
             android:text="....."
             android:textAlignment="center"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="35dp"
             android:textSize="20sp"  />

        <TextView
            android:id="@+id/textViewPenjelasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="....."
            android:textAlignment="center"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>
</LinearLayout>